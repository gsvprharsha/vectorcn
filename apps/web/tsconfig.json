{
  "extends": "@vectorcn/typescript-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@vectorcn/ui/*": ["../../packages/ui/src/*"],  
      "@vectorcn/ui": ["../../packages/ui/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/code-fetch.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
